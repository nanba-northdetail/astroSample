---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<li class="link-card sp:u-width-100per pc:u-width-33per">
  <a href={href}>
    <dl>
      <dt>
        {title}
        <span>&rarr;</span>
	  </dt>
      <dd>{body}</dd>
    </dl>
  </a>
</li>
<style lang="scss">
.link-card {
  list-style: none;
  display: flex;
  padding: 1px;
  border-radius: 1em;
  background-position: 100%;
}
.link-card > a {
  width: 100%;
  text-decoration: none;
  line-height: 1.4;
  padding: calc(1.5rem - 1px);
  border-radius: 8px;
  color: white;
  background: #333;
  border: 1px solid #333;
  &:hover{
    background: #fff;
    color:#333;
  }
}
dt {
  margin: 0;
  font-size: 1.25rem;
}
dd {
  margin-top: 0.5rem;
}
</style>
